# --- General & Identity Configuration ---
myhostname = {{ public_fqdn }}
myorigin = /etc/mailname
mydomain = {{ main_domain }}

# --- Network & Security ---
inet_interfaces = all
mynetworks = 127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128 10.50.1.7/32 172.16.0.0/12 172.17.0.0/16
mydestination = $myhostname, localhost.$mydomain, localhost

# --- Docker-specific Settings ---
smtpd_client_restrictions = 
    permit_mynetworks
    reject_unauth_pipelining
    reject_unknown_client_hostname

smtpd_relay_restrictions = 
    permit_mynetworks
    permit_sasl_authenticated
    defer_unauth_destination

# --- TLS Configuration ---
smtpd_tls_cert_file = /etc/letsencrypt/live/{{ public_fqdn }}/fullchain.pem
smtpd_tls_key_file = /etc/letsencrypt/live/{{ public_fqdn }}/privkey.pem
smtpd_use_tls = yes
smtpd_tls_security_level = may
smtp_tls_security_level = may

# Protocol restrictions
smtpd_tls_protocols = !SSLv2, !SSLv3, !TLSv1, !TLSv1.1
smtpd_tls_mandatory_protocols = !SSLv2, !SSLv3, !TLSv1, !TLSv1.1

# Cipher suites
smtpd_tls_ciphers = high
smtpd_tls_exclude_ciphers = aNULL, eNULL, EXPORT, DES, RC4, MD5, PSK, 3DES

# --- Logging ---
smtpd_tls_loglevel = 1
debug_peer_level = 2
debug_peer_list = 172.16.0.0/12

# --- Performance ---
smtpd_tls_session_cache_database = btree:${data_directory}/smtpd_scache
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache

# --- Mail Delivery ---
relayhost = 
sender_canonical_maps = hash:/etc/postfix/sender_canonical
smtp_generic_maps = hash:/etc/postfix/generic
masquerade_domains = $myhostname

# --- Resource Limits ---
smtpd_recipient_limit = 100
smtpd_timeout = 300s
smtpd_soft_error_limit = 10
smtpd_hard_error_limit = 20

# --- Compatibility ---
compatibility_level = 3.6
biff = no
append_dot_mydomain = no
readme_directory = no
smtpd_banner = $myhostname ESMTP

# --- Docker Container Support ---
transport_maps = hash:/etc/postfix/transport
docker_destination_recipient_limit = 1